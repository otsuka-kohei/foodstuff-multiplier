<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/dishListFragment">

    <fragment
        android:id="@+id/dishListFragment"
        android:name="com.example.foodstuff_multiplier.fragments.DishListFragment"
        android:label="料理一覧"
        tools:layout="@layout/fragment_dish_list">
        <action
            android:id="@+id/action_dishListFragment_to_inputDishNameFragment"
            app:destination="@id/inputDishNameFragment"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right" />
        <action
            android:id="@+id/action_dishListFragment_to_inputAmountFragment"
            app:destination="@id/inputAmountFragment"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right" />
    </fragment>

    <fragment
        android:id="@+id/inputDishNameFragment"
        android:name="com.example.foodstuff_multiplier.fragments.InputDishNameFragment"
        android:label="料理名を入力"
        tools:layout="@layout/fragment_input_dish_name">

        <action
            android:id="@+id/action_inputDishNameFragment_to_inputFoodstuffFragment"
            app:destination="@id/inputFoodstuffFragment"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right" />
        <argument
            android:name="id"
            app:argType="integer"
            android:defaultValue="-1" />
        <argument
            android:name="dish"
            app:argType="com.example.foodstuff_multiplier.Dish"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <fragment
        android:id="@+id/inputFoodstuffFragment"
        android:name="com.example.foodstuff_multiplier.fragments.InputFoodstuffFragment"
        android:label="材料の情報を入力"
        tools:layout="@layout/fragment_input_foodstuff">

        <argument
            android:name="dishName"
            app:argType="string" />
        <argument
            android:name="dish"
            android:defaultValue="@null"
            app:argType="com.example.foodstuff_multiplier.Dish"
            app:nullable="true" />

        <action
            android:id="@+id/action_inputFoodstuffFragment_to_selectMainFoodstuffFragment"
            app:destination="@id/selectMainFoodstuffFragment"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right" />
        <argument
            android:name="id"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>


    <fragment
        android:id="@+id/selectMainFoodstuffFragment"
        android:name="com.example.foodstuff_multiplier.fragments.SelectMainFoodstuffFragment"
        android:label="メインとなる材料を選択"
        tools:layout="@layout/fragment_select_main_foodstuff">
        <argument
            android:name="dishName"
            app:argType="string" />
        <argument
            android:name="foodstuffList"
            app:argType="com.example.foodstuff_multiplier.Foodstuff[]" />
        <action
            android:id="@+id/action_selectMainFoodstuffFragment_to_confirmDishFragment"
            app:destination="@id/confirmDishFragment"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right" />
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/confirmDishFragment"
        android:name="com.example.foodstuff_multiplier.fragments.ConfirmDishFragment"
        android:label="確認"
        tools:layout="@layout/fragment_confirm_dish" >
        <argument
            android:name="dish"
            app:argType="com.example.foodstuff_multiplier.Dish" />
        <action
            android:id="@+id/action_confirmDishFragment_to_dishListFragment"
            app:destination="@id/dishListFragment"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right" />
    </fragment>

    <fragment
        android:id="@+id/inputAmountFragment"
        android:name="com.example.foodstuff_multiplier.fragments.InputAmountFragment"
        android:label="材料の量を入力"
        tools:layout="@layout/fragment_input_amount" >
        <argument
            android:name="dish"
            app:argType="com.example.foodstuff_multiplier.Dish" />
        <action
            android:id="@+id/action_inputAmountFragment_to_scaleResultFragment"
            app:destination="@id/scaleResultFragment"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right"/>
    </fragment>

    <fragment
        android:id="@+id/scaleResultFragment"
        android:name="com.example.foodstuff_multiplier.fragments.ScaleResultFragment"
        android:label="計算結果"
        tools:layout="@layout/fragment_scale_result" >
        <argument
            android:name="dish"
            app:argType="com.example.foodstuff_multiplier.Dish" />
        <argument
            android:name="mainFoodstuffAmount"
            app:argType="float" />
        <action
            android:id="@+id/action_scaleResultFragment_to_dishListFragment"
            app:destination="@id/dishListFragment"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right"/>
    </fragment>

</navigation>